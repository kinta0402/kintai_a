<% provide(:title, '一覧') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザ一覧</h1>
<% end %>

<!--  CSVファイル選択ボタン  -->
<div class="input-group">
    <label class="input-group-btn">
        <span class="btn btn-default">
            ファイル選択<input type="file" style="display:none">
        </span>
    </label>
    <input type="text" class="form-control" readonly="">
</div>


<!--CSVインポートボタン -->

<div class = "btn-padding">  
  <%= link_to "CSVをインポート", root_path, class: "btn btn-primary" %>
</div>


<!--  検索拡張機能  -->
<div class="search">
  <p>ユーザー名検索</p>
    <%= form_tag(users_path, :method => 'get' ) do %>
      <div class = "input-group"> <!-- seach area ①たとえばこの二つのclassをinputっていう名前とは別の名前にして、再度CSSを指定する!! cssのdispay inline block等で試そう-->
        <%= text_field_tag :search %>
         <span class="input-group-btn"> <!-- seach area ②ここのCSSはcustom.scssのinputが指定されてる為！！-->
          <%= submit_tag '検索', :name => nil, class: "btn btn-primary" %>
         </span>
      </div>   
    <% end %>
</div>



<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>